{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "envName" : {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "myname": {
            "type": "string",
            "metadata": {
                "description": "ibodev"
            }
        }
    },
    "functions": [],
    "variables": {
        "siteName": "[concat(parameters('myname'),parameters('appName'), '-', parameters('envName'), '-site')]",
        "planName": "[concat(parameters('myname'),parameters('appName'), '-', parameters('envName'), '-plan')]"
        
    },
    "resources": [
        {
            "name": "[variables('planName')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2024-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "F1",
                "capacity": 1
            },
            "tags": {
                "displayName": "[variables('planName')]"
            },
            "properties": {
                "name": "[variables('planName')]"
            }
        },
        {
            "name": "[variables('siteName')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2024-04-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/',variables('planName'))]": "Resource",
                "displayName": "[variables('siteName')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]"
            ],
            "properties": {
                "name": "[variables('siteName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]"
            },
            "resources":[
               {
                "name": "appsettings",
                "type": "config",
                "apiVersion": "2015-08-01",
                "dependsOn": [
                    "[resourceId('Microsoft.Web/sites', variables('siteName'))]"
                ],
                "tags": {
                    "displayName": "config"
                },
                "properties": {
                    "EnvName": "arm",
                    "StartPage": "start.md",
                    "SCM_DO_BUILD_DURING_DEPLOYMENT" : "True"   
                }
                }
            ]
            
        }
        

    ],
    "outputs": {

        "siteName": {
            "type": "string",
            "value": "[variables('siteName')]"
        },
        "planName": {
            "type": "string",
            "value": "[variables('planName')]"
        }

        
    }
}